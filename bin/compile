#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
# $HOME: /app

# fail fast
set -eu -o pipefail

BUILD_DIR=${1:-.}
CACHE_DIR=${2:-}
LP_DIR=$(
  cd "$(dirname "$0")"
  cd ..
  pwd
)


# Install bun
export BUN_INSTALL=$CACHE_DIR/bun
export PATH="$BUN_INSTALL/bin:$PATH"

if [ -f "$BUN_INSTALL"/bin/bun ]; then
  echo "------> Bun $(bun --version) is already installed"
else
  curl -fsSL https://bun.sh/install | bash
fi

bun upgrade "$BUN_VERSION"


cat <<EOT >"$BUILD_DIR"/.bunfig.toml
[install.cache]
# the directory to use for the cache
dir = "$CACHE_DIR/bun/install/cache"
EOT

# download dependencies
cd "$BUILD_DIR"
bun install "$BUN_INSTALL_OPTS"

# give environment to later buildpacks
export | grep -E -e ' (PATH)=' >"$LP_DIR/export"
